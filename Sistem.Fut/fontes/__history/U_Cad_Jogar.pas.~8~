  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Imaging.pngimage, Vcl.ExtCtrls,
  Vcl.Mask, Vcl.StdCtrls, Vcl.DBCtrls,data.Db, Vcl.ComCtrls, Vcl.Grids,
  Vcl.DBGrids;

type
  Tfrm_jogador = class(TForm)
    PageControl1: TPageControl;
    jogador: TTabSheet;
    consulta_joga: TTabSheet;
    Image1: TImage;
    txt_id: TDBEdit;
    txt_nome: TDBEdit;
    txt_idade: TDBEdit;
    txt_altura: TDBEdit;
    txt_peso: TDBEdit;
    txt_camisa: TDBEdit;
    txt_nacio: TDBEdit;
    txt_natu: TDBEdit;
    txt_datanasc: TDBEdit;
    txt_apelido: TDBEdit;
    txt_datacad: TDBEdit;
    txt_sexo: TDBComboBox;
    txt_posicao: TDBComboBox;
    txt_times: TDBComboBox;
    btn_inserir: TImage;
    btn_salvar: TImage;
    btn_consultar: TImage;
    btn_cancelar: TImage;
